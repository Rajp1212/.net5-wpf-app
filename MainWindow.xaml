        <Button Name="bt1" Content="Click here to Check price and Finalize Order!" HorizontalAlignment="Left" Margin="400,328,0,0" VerticalAlignment="Top" Height="39" Width="268" Click="ButtonClicked" Foreground="BlueViolet" FontWeight="Bold"/>
